<div class="twi_blocks">
    <div class="page-width twi_block_container">
        {% for block in section.blocks %}
            <div class="twi_block">
                <div class="twi_block_content">
                    {% if block.settings.block_title != blank %}    
                        <h3 class="twi_block_title">{{ block.settings.block_title }}</h3>
                    {% endif %}
                    {% if block.settings.block_info != blank %}
                        <p class="twi_block_info">{{ block.settings.block_info }}</p>
                    {% endif %}
                    {% if block.settings.link_text != blank %}    
                        <a class="twi_block_link" href="{{ block.settings.link }}">{{ block.settings.link_text }}</a>
                    {% endif %}
                </div>
                <div class="twi_block_image_container">
                    <img src="{{ block.settings.img | img_url: 'master' }}">
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<style>
    .twi_blocks{
        display: flex;
        width: 100%;
        align-items: center;
        justify-content: center;
        background: linear-gradient(180deg, rgb(186 237 229) 0%, rgba(255,255,255,1) 51%, rgba(255,255,255,1) 100%, rgba(255,255,255,1) 100%);
    }
    .twi_block_container{
        display: flex;
        width: 100%;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 10rem 5rem;
    }
    .twi_block{
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        margin-bottom: 80px;
    }
    .twi_main_title{
        font-style: normal;
        font-weight: 800;
        font-size: 40px;
        line-height: 150%;
        text-align: center;
        color: #566E6A;
    }
    .twi_main_info{
        max-width: 640px;
        text-align: center;
        margin: 0 0 40px;
        font-weight: 400;
        color: #566E6A;
    }
    .twi_block:nth-child(2n){
        flex-direction: row-reverse;
    }
    .twi_block:last-child{
        margin-bottom: 0;
    }
    .twi_block_title{
        color: #546B67;
        font-style: normal;
        font-weight: 500;
        font-size: 36px;
        line-height: 130%;
    }
    .twi_block_info{
        color: #58B8A8;
    }
    .twi_block_link{
        color: #eb9e71;
        text-decoration: none;
        font-weight: 700;
        font-size: 16px;
        border-bottom: 2px solid #eb9e71;
        line-height: 150%;
        position: relative;
    }
    .twi_block_link::after{
        background: none repeat scroll 0 0 transparent;
        bottom: -2px;
        content: "";
        display: block;
        height: 2px;
        left: 0;
        position: absolute;
        background: #eb9e71;
        transition: width 0.5s ease 0s, left 0.5s ease 0s;
        width: 0;
    }
    .twi_block_link:hover{
        border-bottom: 2px solid transparent;
    }
    .twi_block_link:hover::after{
        width: 100%; 
        left: 0; 
    }
    .twi_block_content{
        max-width: 480px;
        width: 100%;
    }
    .twi_block:nth-child(2n) .twi_block_image_container{
        margin-left: 0px;
        margin-right: 20px;
    }
    .twi_block_image_container{
        max-width: 550px;
        height: 380px;
        width: 100%;
        margin-left: 20px;
    }
    .twi_block_image_container img{
        width: 100%;
        object-fit: cover;
        height: 100%;
        border-radius: 10px;
    }
    @media screen and (max-width:768px) {
        .twi_block_container{
            padding: 4rem 1.6rem;
        }
        .twi_block{
            flex-direction: column;
            margin-bottom: 40px;
        }
        .twi_block:nth-child(2n){
            flex-direction: column;
        }
        .twi_block:nth-child(2n) .twi_block_image_container{
            margin-right: 0px;
            margin-top: 20px;
        }
        .twi_block_image_container{
            margin-left: 0;
            margin-top: 20px;
            max-width: 100%;
        }
        .twi_block_content{
            max-width: 100%;
        }
    }
</style>

{% schema %}
{
    "name": "Text with image blocks",
    "settings": [
       
    ],
    "blocks": [
    {
        "type":"select",
            "name":"Block",
            "settings":[
            {
                "type": "text",
                "id": "block_title",
                "label": "Title"
            },
            {
                "type": "textarea",
                "id": "block_info",
                "label": "Text"
            },
            {
                "type": "text",
                "id": "link_text",
                "label": "Link text"
            },
            {
                "type": "url",
                "id": "link",
                "label": "Link"
            },
            {
                "type": "image_picker",
                "id": "img",
                "label": "Image"
            }
            ]
    }
    ],
    "presets": [
        {
            "category": "New",
            "name":"Text with image blocks"
        }
    ]
}
{% endschema %}