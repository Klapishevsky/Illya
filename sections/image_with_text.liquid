<div class="image_with_text">
    <div class="image_with_text_position page-width">
        <div class="iwt_content">
            <h2 class="iwt_title">{{ section.settings.title }}</h2>
            <p class="iwt_text">{{ section.settings.info }}</p>
        </div>
        <div class="iwt_image_conteiner">
            <img class="iwt_image" src="{{ section.settings.img | img_url: 'master' }}">
        </div>
    </div>
</div>

<style>
.image_with_text{
    display: flex;
    flex-direction: row;
    width: 100%;
    align-items: center;
    justify-content: center;
}
.image_with_text_position{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 5rem;
}
.iwt_content{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    max-width: 780px;
    text-align: center;
    border-radius: 50px;
    padding: 0 30px;
    background: #BAEEE5;
    margin-bottom: 40px;
}
.iwt_image_conteiner{
    display: flex;
    width: 100%;
    max-height: 600px;
}
.iwt_image_conteiner img{
    width: 100%;
    object-fit: cover;
}
</style>

{% schema %}
{
    "name": "Text with image",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "textarea",
            "id": "info",
            "label": "Text"
        },
        {
            "type": "image_picker",
            "id": "img",
            "label": "Image/GIF"
        }
    ],
    "presets": [
        {
            "category": "New",
            "name":"Text with image"
        }
    ]
}
{% endschema %}